{
  "info": {
    "_postman_id": "multi-turn-chat-api-quick-tests",
    "name": "Multi-Turn LLM Chat API (Quick)",
    "description": "Minimal test collection for quick API validation. For comprehensive tests, use Multi-Turn-LLM-Chat-API.postman_collection.json",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8083/api/v1",
      "type": "string",
      "description": "Base URL with API prefix"
    },
    {
      "key": "userId",
      "value": "test-user-001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Quick Health Check",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Chat Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/chat/status",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "status"]
            }
          },
          "response": []
        },
        {
          "name": "List Agents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/chat/agents",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "agents"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Quick Chat Tests",
      "item": [
        {
          "name": "Normal Agent - Hello",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "text/event-stream" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"threadId\": \"quick-test-{{$timestamp}}\",\n  \"userId\": \"{{userId}}\",\n  \"agentType\": \"normal\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Hello! Say hi in one sentence.\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/stream",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "stream"]
            }
          },
          "response": []
        },
        {
          "name": "RAG Agent - Quick Query",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "text/event-stream" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"threadId\": \"rag-quick-{{$timestamp}}\",\n  \"userId\": \"{{userId}}\",\n  \"agentType\": \"rag\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"What is NestJS?\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/stream",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "stream"]
            }
          },
          "response": []
        },
        {
          "name": "Multi-Agent - Quick Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "text/event-stream" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"threadId\": \"multi-quick-{{$timestamp}}\",\n  \"userId\": \"{{userId}}\",\n  \"agentType\": \"multi-agent\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Briefly explain microservices in 2-3 sentences.\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/stream",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "stream"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Quick Search Tests",
      "item": [
        {
          "name": "Semantic Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/search/semantic?query=NestJS&top=3",
              "host": ["{{baseUrl}}"],
              "path": ["search", "semantic"],
              "query": [
                { "key": "query", "value": "NestJS" },
                { "key": "top", "value": "3" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Vector Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/search/vector?query=machine learning&k=3",
              "host": ["{{baseUrl}}"],
              "path": ["search", "vector"],
              "query": [
                { "key": "query", "value": "machine learning" },
                { "key": "k", "value": "3" }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
