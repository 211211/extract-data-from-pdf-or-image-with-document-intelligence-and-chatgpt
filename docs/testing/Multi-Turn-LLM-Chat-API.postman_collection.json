		{
			"name": "Multi-Turn Conversations",
			"description": "Use the same threadId across turns to test context retention. Copy the threadId from Turn 1 response for subsequent turns.",
			"item": [
				{
					"name": "Turn 1 - Introduce Context",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate a UUID v7-like ID for this conversation",
									"const timestamp = Date.now().toString(16).padStart(12, '0');",
									"const random = Math.random().toString(16).substring(2, 14);",
									"const threadId = `${timestamp.slice(0,8)}-${timestamp.slice(8,12)}-7${random.slice(0,3)}-${random.slice(3,7)}-${random.slice(7,19).padEnd(12, '0')}`;",
									"pm.collectionVariables.set('multiTurnThreadId', threadId);",
									"pm.collectionVariables.set('multiTurnMsgId1', pm.variables.replaceIn('{{$guid}}'));"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "text/event-stream"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"threadId\": \"{{multiTurnThreadId}}\",\n  \"userId\": \"{{userId}}\",\n  \"agentType\": \"normal\",\n  \"messages\": [\n    {\n      \"id\": \"{{multiTurnMsgId1}}\",\n      \"role\": \"user\",\n      \"content\": \"I'm building an e-commerce application using React and Node.js. I need help with the architecture.\"\n    }\n  ]\n}"
